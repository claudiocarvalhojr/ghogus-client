<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <% include header.ejs %>
    <p><a href="/home">Home</a> | <a href="/logout">Sair</a></p>
    <% if (!docs || docs.length == 0) { %>
    <p>Nenhum cliente cadastrado.</p>
    <% } else { docs.forEach(function(customer) { %>
    <p>Nome: <%= customer.nome %></p>
    <p>Idade: <%= customer.idade %></p>
    <p>UF: <%= customer.uf %></p>
    <% })} %>
</body>

</html>